<!DOCTYPE html>
<html ng-app="myApp">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script type="text/javascript">
            var idx = window.location.toString().indexOf("#");
            if (idx > 0) {
                window.location = window.location.toString().substring(0, idx);
            }
        </script>
        <title>Home - Dropboks</title>
        
        <link rel="stylesheet" href="/bower_components/angular-material/angular-material.min.css">
        <link rel="stylesheet" href="/css/custom.css">
    </head>
    <body ng-controller="HomeCtrl" layout="row">
        <md-sidenav md-is-locked-open="$mdMedia('gt-sm')" class="md-whiteframe-z2" md-component-id="left">
            <md-toolbar class="md-medium md-hue-2 bottomShadow">
                <span flex></span>
                <div layout="column" class="md-toolbar-tools-bottom inset">
                    <% if(user.local.username) { %>
                        <div><%= user.local.username %></div>
                        <div>(Local login)</div>
                    <% } else if (user.facebook.name) { %>
                        <div><%= user.facebook.name %></div>
                        <div>(Facebook login)</div>
                    <% } else if (user.google.name) { %>
                        <div><%= user.google.name %></div>
                        <div>(Google+ login)</div>
                    <% } %>
                </div>
            </md-toolbar>
            
            <md-list>
                <md-list-item ng-repeat="item in menu">
                    <md-button class="wideButton textLeftAlign" href="{{item.link}}">
                        <ng-md-icon icon="{{item.icon}}"></ng-md-icon>
                        <span class="sidenavButtonText">
                            {{item.title}}
                        </span>
                    </md-button>
                </md-list-item>
            </md-list>
            
            <md-divider></md-divider>
            <md-subheader>Management</md-subheader>
            
            <md-list>
                <md-list-item ng-repeat="item in admin">
                    <md-button class="wideButton textLeftAlign" href="{{item.link}}">
                        <ng-md-icon icon="{{item.icon}}"></ng-md-icon>
                        <span class="sidenavButtonText">
                            {{item.title}}
                        </span>
                    </md-button>
                </md-list-item>
            </md-list>
        </md-sidenav>
        
        <div layout="column" class="relative" layout-fill role="main">
            <md-toolbar ng-show="!showSearch">
                <div class="md-toolbar-tools">
                    <md-button ng-click="toggleSidenav('left')" hide-gt-sm aria-label="Menu">
                        <ng-md-icon icon="menu"></ng-md-icon>
                        Menu
                    </md-button>
                    <span flex></span>
                    <md-button aria-label="Search" ng-click="showSearch = !showSearch">
                        <ng-md-icon icon="search"></ng-md-icon>
                    </md-button>
                    <md-button aria-label="Open Settings" ng-click="showListBottomSheet($event)">
                        <ng-md-icon icon="more_vert"></ng-md-icon>
                    </md-button>
                </div>
                <md-tabs md-stretch-tabs class="md-primary" md-selected="data.selectedIndex">
                    <md-tab id="tab1" aria-controls="tab1-content">
                        Latest
                    </md-tab>
                    <md-tab id="tab2" aria-controls="tab2-content">
                        Favorites
                    </md-tab>
                </md-tabs>
            </md-toolbar>
            
            <md-toolbar class="md-hue-1" ng-show="showSearch">
                <div class="md-toolbar-tools">
                    <md-button ng-click="showSearch = !showSearch" aria-label="Back">
                        <ng-md-icon icon="arrow_back"></ng-md-icon>
                    </md-button>
                    <h3 flex="10">Back</h3>
                    <md-input-container md-theme="input" flex>
                        <label>&nbsp;</label>
                        <input ng-model="search.who" placeholder="enter search">
                    </md-input-container>
                    <md-button aria-label="Search" ng-click="showSearch = !showSearch">
                        <ng-md-icon icon="search"></ng-md-icon>
                    </md-button>
                    <md-button aria-label="Open Settings" ng-click="showListBottomSheet($event)">
                        <ng-md-icon icon="more_vert"></ng-md-icon>
                    </md-button>
                </div>
            </md-toolbar>
        </div>
